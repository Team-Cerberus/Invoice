<div class="container">
    <!-- Top Row -->
    <div class="row">
        <!-- Document Column -->
        <div class="col-12 col-sm-4 col-sm-push-4 col-md-6 col-md-push-3">
            <div class="panel panel-default text-center">
                <h2 class="text-center">{{document.document-type}}</h2>
                <h2 class="text-center"><small>{{document.document-is-original}}</small></h2>
                <p>{{document.document-number}}</p>
                <p>{{document.document-date-issued}}</p>
                <p>{{document.document-date-sale}}</p>
                <p>{{document.document-place-sale}}</p>
            </div>
        </div>
        <!-- Issuer Column -->
        <div class="col-12 col-sm-4 col-sm-pull-4 col-md-3 col-md-pull-6">
            <div class="well well-lg">
                <span>Issuer:</span>
                <span>{{issuer.issuer-name}}</span>
            </div>
        </div>
        <!-- Receiver Column -->
        <div class="col-12 col-sm-4 col-md-3">
            <div class="well well-lg">
                <span>Receiver:</span>
                <span>{{receiver.receiver-name}}</span>
            </div>
        </div>
    </div>
    <!-- Items Row -->
    <div class="row">
        <table class="table table-striped">
            <thead class="thead-default">
                <tr>
                    <th>#</th>
                    <th>Item Code</th>
                    <th>Item Description</th>
                    <th>Unit</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each invoice-item-list}}
                <tr>
                    <th>{{@index}}</th>
                    <td>{{item-id}}</td>
                    <td>{{item-name}}</td>
                    <td>{{item-unit}}</td>
                    <td>{{item-quantity}}</td>
                    <td>{{item-unit-price}}</td>
                    <td>{{item-total-price}}</td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-btn">
                                <button class="btn btn-danger btn-xs">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </button>
                            </span>
                        </div>
                    </td>
                </tr>
                {{/each}}
                <!-- Additional Item Row -->
                <tr>
                    <th></th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <div class="input-group">
                            <span class="input-group-btn">
                                <button class="btn btn-success btn-xs">
                                    <i class="glyphicon glyphicon-plus"></i>
                                </button>
                            </span>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <!-- Totals Row -->
    <div class="row">
        <div class="col-12 col-sm-10 pull-right">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="inputfield2" class="col-sm-8 control-label">Total Price:</label>
                    <div class="controls">
                        <div class="input-group">
                            <input type="text" class="form-control" id="inputfield2" placeholder="0.00">
                            <span class="input-group-addon">BGN</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputfield2" class="col-sm-8 control-label">Tax Base:</label>
                    <div class="controls">
                        <div class="input-group">
                            <input type="text" class="form-control" id="inputfield2" placeholder="0.00">
                            <span class="input-group-addon">BGN</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputfield2" class="col-sm-8 control-label">Value Added Tax (VAT)</label>
                    <div class="controls">
                        <div class="input-group">
                            <input type="text" class="form-control" id="inputfield2" placeholder="0.00">
                            <span class="input-group-addon">BGN</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputfield2" class="col-sm-8 control-label">Total Due:</label>
                    <div class="controls">
                        <div class="input-group">
                            <input type="text" class="form-control" id="inputfield2" placeholder="0.00">
                            <span class="input-group-addon">BGN</span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
    <!-- Bottom Row -->
    <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
            <h4 class="well-lg">Created By:</h4>
        </div>
        <!-- Right Column -->
        <div class="col-md-6">
            <h4 class="well-lg">Accepted By:</h4>
        </div>
    </div>
</div>
